<div class="login-container">
  <div>
    <h1>LOGIN</h1>
  </div>
  <div class="login-form form-horizontal">

    <%= form_tag '/login' do %>
      <p>
        <%= text_field_tag :username, nil, placeholder: "username" %>
      </p>
      <p>
        <%= password_field_tag :password, nil, placeholder: "password" %>
      </p>

      <button class="btn btn-default" id="grey-btn">LOGIN</button>

    <% end %>

  </div>

  <a href="/sign_up"><button class="btn btn-default">SIGNUP</button></a>

</div>